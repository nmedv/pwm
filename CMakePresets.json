{
	"version": 3,
	"configurePresets": [
		{
			"name": "basic",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"installDir": "${sourceDir}/install/${presetName}",
			"cacheVariables": {
				"CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
			}
		},
		{
			"name": "debug",
			"inherits": "basic",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"inherits": "basic",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "vc",
			"inherits": "basic",
			"hidden": true,
			"generator": "Visual Studio 17 2022",
			"cacheVariables": {
				"CMAKE_GENERATOR": "Visual Studio 17 2022",
				"CMAKE_C_COMPILER": "cl",
				"CMAKE_CXX_COMPILER": "cl"
			}
		},
		{
			"name": "cmake_vc32_debug",
			"inherits": ["debug", "vc"],
			"displayName": "Visual C/C++ Win32 Debug",
			"cacheVariables": {
				"CMAKE_GENERATOR_PLATFORM": "Win32"
			}
		},
		{
			"name": "cmake_vc64_debug",
			"inherits": ["debug", "vc"],
			"displayName": "Visual C/C++ x64 Debug",
			"cacheVariables": {
				"CMAKE_GENERATOR_PLATFORM": "x64"
			}
		}
	]
}