{
	"version": 3,
	"configurePresets": [
		{
			"name": "basic",
			"hidden": true,
			"binaryDir": "${sourceDir}/build/${presetName}",
			"installDir": "${sourceDir}/install/${presetName}",
			"cacheVariables": {
				"CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
			}
		},
		{
			"name": "debug",
			"inherits": "basic",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "win32_mingw_debug",
			"inherits": "debug",
			"displayName": "Windows x32 MinGW Debug",
			"generator": "MinGW Makefiles",
			"architecture": {
				"value": "x86",
				"strategy": "external"
			},
			"environment": {
				"PATH": "$penv{PATH};C:\\MinGW\\bin"
			},
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++",
				"CMAKE_MAKE_PROGRAM": "mingw32-make"
			}
		},
		{
			"name": "win32_msvc_debug",
			"inherits": "debug",
			"displayName": "Windows x32 MSVC Debug",
			"generator": "Visual Studio 17 2022",
			"cacheVariables": {
				"CMAKE_GENERATOR": "Visual Studio 17 2022",
				"CMAKE_GENERATOR_PLATFORM": "Win32",
				"CMAKE_C_COMPILER": "cl",
				"CMAKE_CXX_COMPILER": "cl"
			}
		}
	]
}